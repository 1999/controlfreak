{
  "name": "Control Freak",
  "version": "2.0",
  "manifest_version": 2,
  "minimum_chrome_version" : "22",
  "description": "Greasemonkey-like mods, but quicker to tweak",
  "default_locale": "en",

  "icons": {
    "16":  "images/system16.png",
    "32":  "images/system32.png",
    "128": "images/system128.png"
  },

  "browser_action": {
    "default_icon": "images/system32.png",
    "default_title": "Control Freak",
    "default_popup": "src/popup.html"
  },

  "background": {
    "scripts": ["src/js/events.js"],
    "persistent": false
  },
  "options_page": "src/scripts.html",
  "content_security_policy" : "script-src 'self' https://ssl.google-analytics.com https://yandex.st; object-src 'self'",


  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["src/js/content.js"]
  }],

  "permissions": ["tabs", "storage", "*://*/*", "unlimitedStorage"]
}
