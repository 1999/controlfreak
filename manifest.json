{
  "name": "Control Freak",
  "version": "2.0",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "description": "Greasemonkey-like mods, but quicker to tweak",
  "icons": { 
    "16":  "images/system16.png",
    "32":  "images/system32.png",
    "128": "images/system128.png"
  },

  "browser_action": {
    "default_icon": "images/system32.png",
    "default_title": "Control Freak",
    "default_popup": "src/popup.html"
  },

  "background": {
    "scripts": [
      "src/js/url.js",
      "src/js/scriptDAO.js",
      "src/js/background.js"
    ]
  },
  "options_page": "src/scripts.html",

  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["lib/require.js", "src/js/content.js"]
  }],

  "permissions": ["tabs"],
  "optional_permissions": ["storage"]
}
